<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/assets/fonts/fontawesome-free-5.15.3-web/css/all.min.css">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- SB Admin -->
    <link rel="stylesheet" href="~/Content/assets/css/sb_admin.css">
    <!-- Datatable -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/base.css">
    <link rel="stylesheet" href="~/Content/assets/css/main.css">
    <link rel="stylesheet" href="~/Content/assets/css/admin.css">
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand bg-light justify-content-between">
        <div class="sb-logo-wrapper d-flex align-items-center justify-content-center">
            <a href="#" class="sb-logo bg-dark text-light" id="sidebarToggle">
                <i class="fas fa-tools"></i>
                Multi Admin
            </a>
        </div>
        <div class="dropdown">
            <a class="nav-link dropdown-toggle text-dark" id="adminDropDown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user fa-fw"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end rounded-0" aria-labelledby="adminDropDown">
                <li><a href="/Admin/Logout" class="dropdown-item">Đăng xuất</a></li>
            </ul>
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav sb-sidenav-dark bg-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-header">
                            <a href="/Admin" class="nav-link">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Bảng điều khiển
                            </a>
                        </div>
                        <div class="sb-sidenav-menu-heading">Quản lý</div>
                        <a href="#" class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#collapseLayouts"
                           aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                            Danh mục
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a href="/Admin/Product" class="nav-link">Sản phẩm</a>
                                <a href="/Admin/Coupon" class="nav-link">Khuyến mại</a>
                                <a href="/Admin/Classify" class="nav-link">Phân loại</a>
                            </nav>
                        </div>
                        <a href="/Admin/Order" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Đơn hàng
                        </a>
                        <a href="/Admin/User" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Người dùng
                        </a>
                        <div class="sb-sidenav-menu-heading">Thống kê</div>
                        <a class="nav-link" href="/Admin/Revenue">
                            <div class="sb-nav-link-icon"><i class="fas fa-coins"></i></div>
                            Doanh thu
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid py-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="~/Content/assets/ckeditor/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/assets/js/sb_admin.js"></script>
    <script src="~/Content/assets/js/admin.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
</body>
</html>