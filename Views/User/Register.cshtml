@model ban_quan_ao_asp.net_mvc.Models.Account
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Register -->
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-4">
            <h2 class="text-center my-4">Đăng ký</h2>
            @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "d-flex flex-column" }))
            {
                @Html.AntiForgeryToken()
                @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control rounded-0 shadow-none", @placeholder = "Tên đăng nhập" } })
                @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger mb-3" })
                @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control rounded-0 shadow-none", @placeholder = "Tên người dùng" } })
                @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger mb-3" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded-0 shadow-none", @placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mb-3" })
                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control rounded-0 shadow-none", @placeholder = "Số điện thoại" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger mb-3" })
                @Html.Password("MatKhau", "", htmlAttributes: new { @class = "form-control rounded-0 shadow-none", @placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger mb-3" })
                <button class="btn btn-primary rounded-0 shadow-none mb-3">Đăng ký</button>
            }
            <p class="text-center">Bạn đã có tài khoản? <a href="/User/Login" class="text-primary">Đăng nhập</a></p>
        </div>
    </div>
</div>