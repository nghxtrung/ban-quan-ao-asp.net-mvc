@using ban_quan_ao_asp.net_mvc.Models;
@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!-- Banner -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-xl-8">
            <div id="carouselIndicators" class="carousel slide carousel-fade mb-30 mb-xl-0" data-ride="carousel">
                <div class="carousel-indicators">
                    <a role="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></a>
                    <a role="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></a>
                    <a role="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></a>
                </div>
                <div class="banner-left carousel-inner">
                    <div class="banner-left-item carousel-item active">
                        <img class="banner-left-item__img d-block w-100 h-100" src="~/Content/assets/img/banner-left-1.jpg" alt="First slide">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="banner-left-content">
                                <h1 class="display-4 mb-3 animate__animated animate__fadeInDown">Quần áo nam</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Ưu đãi nhiều hơn, mua sắm vui hơn. Nhận ngay ưu đãi cho lần mua sắm đầu tiên</p>
                                <a href="/Product/Category" class="btn btn-outline-light rounded-0 py-2 px-4 mt-3 animate__animated animate__fadeInUp">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="banner-left-item carousel-item">
                        <img class="banner-left-item__img w-100 h-100" src="~/Content/assets/img/banner-left-2.jpg" alt="Second slide">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="banner-left-content">
                                <h1 class="display-4 mb-3 animate__animated animate__fadeInDown">Quần áo nam</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Ưu đãi nhiều hơn, mua sắm vui hơn. Nhận ngay ưu đãi cho lần mua sắm đầu tiên</p>
                                <a href="/Product/Category" class="btn btn-outline-light rounded-0 py-2 px-4 mt-3 animate__animated animate__fadeInUp">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                    <div class="banner-left-item carousel-item">
                        <img class="banner-left-item__img w-100 h-100" src="~/Content/assets/img/banner-left-3.jpg" alt="Third slide">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="banner-left-content">
                                <h1 class="display-4 mb-3 animate__animated animate__fadeInDown">Quần áo nam</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Ưu đãi nhiều hơn, mua sắm vui hơn. Nhận ngay ưu đãi cho lần mua sắm đầu tiên</p>
                                <a href="/Product/Category" class="btn btn-outline-light rounded-0 py-2 px-4 mt-3 animate__animated animate__fadeInUp">Mua ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="product-offer mb-30">
                <img class="img-fluid" src="~/Content/assets/img/banner-right-1.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Tiết kiệm 25%</h6>
                    <h3 class="text-white mb-3">Ưu đãi đặc biệt</h3>
                    <a href="/Product/Category" class="btn btn-primary shadow-none rounded-0">Mua ngay</a>
                </div>
            </div>
            <div class="product-offer mb-30">
                <img class="img-fluid" src="~/Content/assets/img/banner-right-2.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase">Tiệt kiệm 25%</h6>
                    <h3 class="text-white mb-3">Ưu đãi đặc biệt</h3>
                    <a href="/Product/Category" class="btn btn-primary shadow-none rounded-0">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-12 service">
            <div class="service__item bg-light">
                <h1 class="fa fa-check text-primary"></h1>
                <h5>Sản Phẩm Chất Lượng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 service">
            <div class="service__item bg-light">
                <h1 class="fa fa-shipping-fast text-primary"></h1>
                <h5>Miễn Phí Giao Hàng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 service">
            <div class="service__item bg-light">
                <h1 class="fas fa-exchange-alt text-primary"></h1>
                <h5>7 Ngày Hoàn Trả</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 service">
            <div class="service__item bg-light">
                <h1 class="fa fa-phone-volume text-primary"></h1>
                <h5>Hỗ Trợ 24/7</h5>
            </div>
        </div>
    </div>
</div>
<!-- Categories -->
<div class="container-fluid pt-5">
    <h2 class="title position-relative text-dark text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pe-3">Categories</span>
    </h2>
    <div class="row px-xl-5 pb-3">
        @foreach (var plItem in Model.phanLoaiList)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a href="/Product/Category?maphanloai=@plItem.MaPhanLoai">
                    <div class="category-item mb-4">
                        <div class="category-item__img">
                            <img class="img-fluid" src="~/Content/assets/img/category-1.jpg">
                        </div>
                        <div class="category-item__info">
                            <h6>@plItem.PhanLoaiPhu</h6>
                            <small>100 Products</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
<!-- Featured products -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="title position-relative text-dark text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pe-3">Sản phẩm nổi bật</span>
    </h2>
    <div class="row px-xl-5">
        @foreach (var spItem in Model.sanPhamNoiBatList)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img">
                        <img class="w-100" src="~/Content/assets/img/test-sp-img/@spItem.AnhDaiDien">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square rounded-0" href="#"><i class="fa fa-shopping-cart"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4 product-info">
                        <a class="product-info__name" href="/Product/Detail?masanpham=@spItem.MaSanPham">@spItem.TenSanPham</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@spItem.GiaBan</h5>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Big banner -->
<div class="container-fluid pt-5 pb-3">
    <div class="row px-xl-5">
        <div class="col-md-6">
            <div class="big-banner-item mb-30">
                <img src="~/Content/assets/img/banner-right-1.jpg" alt="">
                <div class="big-banner-item__content">
                    <h6 class="text-white text-uppercase">Tiết kiệm 25%</h6>
                    <h3 class="text-white mb-3">Ưu đãi đặc biệt</h3>
                    <a href="/Product/Category" class="btn btn-primary rounded-0 shadow-none">Mua ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="big-banner-item mb-30">
                <img src="~/Content/assets/img/banner-right-2.jpg" alt="">
                <div class="big-banner-item__content">
                    <h6 class="text-white text-uppercase">Tiết kiệm 25%</h6>
                    <h3 class="text-white mb-3">Ữu đãi đặc biệt</h3>
                    <a href="/Product/Category" class="btn btn-primary rounded-0 shadow-none">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Trademark -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel">
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-1.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-2.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-3.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-4.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-5.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-6.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-7.jpg" alt=""></div>
                <div class="trademark-item bg-light p-4"><img src="~/Content/assets/img/trademark-8.jpg" alt=""></div>
            </div>
        </div>
    </div>
</div>